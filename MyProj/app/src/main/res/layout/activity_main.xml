<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/checkBread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bread" />

    <CheckBox
        android:id="@+id/checkOven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBread"
        android:layout_marginTop="225dp" />


    <ImageView
        android:id="@+id/bread"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/checkBread"
        app:srcCompat="@drawable/bread" />

    <ImageView
        android:id="@+id/oven"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_below="@+id/bread"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="97dp"
        android:layout_toRightOf="@+id/checkOven"
        app:srcCompat="@drawable/oven" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/bread"
        android:text="빵 종합세트" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/bread"
        android:text="10000" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="227dp"
        android:layout_toRightOf="@+id/oven"
        android:text="최신형 오븐" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/oven"
        android:text="100000" />

    <Button
        android:id="@+id/btnBasket"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:background="#FE2E2E"
        android:text="장바구니"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/btnBasket"
        android:background="#5858FA"
        android:textColor="#FFFFFF"
        android:text="구매" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/price1"
        android:text="원" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/price2"
        android:text="원" />

</RelativeLayout>